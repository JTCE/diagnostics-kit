@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

@model ApplicationGridModel

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Applications Grid</div>
    <div class="panel-body">
        @if (Model.ApplicationStatuses.Length == 0)
        {
            <span>
                No logs found - maybe there are some <a href="#FIXME">waiting excluded sources</a> or you need to install one of the 
                <a href="https://github.com/lowleveldesign/diagnostics-kit/wiki#2-logs-collection" target="_blank">harvesters</a> in your applications.
            </span>
        }
    </div>

    @if (Model.ApplicationStatuses.Length > 0)
    {
    <!-- Table -->
        <table class="table">
            <thead>
                <tr>
                    <th>Application</th>
                    @foreach (var srv in Model.Servers)
                    {
                        <th>@srv</th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr></tr>
            </tbody>
        </table>
    }
</div>