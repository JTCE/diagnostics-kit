@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<ResetPasswordViewModel>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Change password</h3>
            </div>
            <div class="panel-body">
                @if ((bool)ViewBag.PasswordChanged) {
                    <div class="alert alert-success" role="alert">Password successfully changed.</div>
                }
                @Html.Partial("Shared/ValidationResults.cshtml")
                <form method="post" action="">
                    <div class="form-group">
                        <label for="Password">Old password</label>
                        <input type="password" class="form-control" id="OldPassword" name="OldPassword" placeholder="Old password" value="@Model.OldPassword" />
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" value="@Model.Password" />
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Confirm password</label>
                        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm password" value="@Model.ConfirmPassword" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="~/" class="btn btn-default">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
