@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<RegisterViewModel>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">User registration form</h3>
                </div>
                <div class="panel-body">
                    @Html.Partial("Shared/ValidationResults.cshtml")
                    <form method="post" action="~/auth/register">
                        <div class="form-group">
                            <label for="Login">Login</label>
                            <input type="text" class="form-control" id="Login" name="Login" placeholder="Login" value="@Model.Login" />
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input name="IsAdmin" id="IsAdmin" type="checkbox" @(Model.IsAdmin ? "checked=\"checked\"" : "")>
                                    Is Administrator
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" value="@Model.Password" />
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword">Confirm password</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm password" value="@Model.ConfirmPassword" />
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="~/auth/users" class="btn btn-default">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
